---
import { Image } from "astro:assets";
import Date from "./Date.astro";

const { post, aboveFold = false } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
    <h2>
        <a href={`/article/${post.slug}/`} class="font-serif text-2xl font-bold"
            >{title}</a
        >
    </h2>
    <Date date={pubDate} class="font-light" />
    <div class="mt-2 grid gap-4 lg:grid-cols-2">
        <a href={`/article/${post.slug}/`}>
            {
                aboveFold ? (
                    <Image
                        src={coverImage}
                        alt={coverAlt}
                        loading={"eager"}
                        fetchpriority={"high"}
                        decoding={"sync"}
                        class="w-full rounded-sm"
                    />
                ) : (
                    <Image
                        src={coverImage}
                        alt={coverAlt}
                        class="w-full rounded-sm"
                    />
                )
            }
        </a>
        <div class="font-manjari">
            {summary}
        </div>
    </div>
</article>
