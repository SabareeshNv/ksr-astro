---
interface Props {
    highlightType: "NOTE" | "WARNING" | "IMPORTANT" | "DEFAULT";
}

const { highlightType = "DEFAULT" } = Astro.props;
---

<div class={`post-highlighted`}>
    <slot />
</div>

<style>
    .post-highlighted {
        border-inline-start: 4px solid var(--clr-dark);
        font-style: normal;
        @apply bg-gray-100 px-4 py-1 shadow-sm md:mx-2 lg:mx-4;
    }
</style>
